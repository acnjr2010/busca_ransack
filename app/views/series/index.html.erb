<p id="notice"><%= notice %></p>

<h1>Buscar Séries</h1>

<%= search_form_for @search do |f| %>
  <%= f.label :name_cont, "NOME:" %>
  <%= f.search_field :name_cont %>

  <%= f.label :seasons_eq, "TEMPORADAS" %>
  <%= f.search_field :seasons_eq %>

  <%= f.label :year_eq, "ANO DE LANÇAMENTO" %>
  <%= f.search_field :year_eq %>

  <%= f.label :kind_cont, "TIPO" %>
  <%= f.search_field :kind_eq %>

  <%= f.label :subtitle_eq, "LEGENDAS" %>
  <%= f.select :subtitle_eq, options_for_select([['Sim', 't'], ['Não', 'f']]), include_blank: 'Possui Legendas'%>

  <%= f.label :created_at_beginning_of_day_gteq, "INICIO" %>
  <%= f.search_field :created_at_beginning_of_day_gteq %>

  <%= f.label :created_at_end_of_day_lt, "FIM" %>
  <%= f.search_field :created_at_end_of_day_lt %>
  

  <%= f.submit %>
<% end %>

<h1>Series</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Seasons</th>
      <th>Year</th>
      <th>Kind</th>
      <th>Subtitle</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @series.each do |serie| %>
      <tr>
        <td><%= serie.name %></td>
        <td><%= serie.seasons %></td>
        <td><%= serie.year %></td>
        <td><%= serie.kind %></td>
        <td><%= serie.subtitle %></td>
        <td><%= link_to 'Show', serie %></td>
        <td><%= link_to 'Edit', edit_series_path(serie) %></td>
        <td><%= link_to 'Destroy', serie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Series', new_series_path %>
